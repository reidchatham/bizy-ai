# Bizy AI Environment Variables Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================
# Authentication & Security
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_64_character_jwt_secret_here

# ============================================
# AI & API Keys
# ============================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================
# Database Configuration (Development)
# ============================================
POSTGRES_USER=bizy
POSTGRES_PASSWORD=bizy_dev_password
POSTGRES_DB=bizy_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (for docker-compose)
DATABASE_URL=postgresql://bizy:bizy_dev_password@postgres:5432/bizy_dev?sslmode=disable

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# ============================================
# Email Configuration
# ============================================
# Development: Use MailHog (no credentials needed)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@bizy.local

# Production: Use SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=SG.your-sendgrid-api-key-here
# FROM_EMAIL=noreply@bizy.ai

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=True
RACK_ENV=development

# ============================================
# API Configuration
# ============================================
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Frontend Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:8000/api
