{
  "name": "Bizy AI",
  "description": "AI-powered business planning & execution agent with TDD workflow",
  "version": "1.0.0",
  "python": {
    "version": "3.8+",
    "venv": "venv"
  },
  "development": {
    "methodology": "Test-Driven Development (TDD)",
    "workflow": "Red (write test) → Green (make pass) → Refactor",
    "test_first": true,
    "database_environments": {
      "test": ":memory: (automatic in pytest)",
      "development": "~/.business-agent/dev_tasks.db",
      "production": "~/.business-agent/tasks.db (PROTECTED)"
    }
  },
  "setup": [
    "python3 -m venv venv",
    "source venv/bin/activate",
    "pip install -e '.[dev]'",
    "make dev"
  ],
  "commands": {
    "test": "make test",
    "test-watch": "make test-watch",
    "lint": "make lint",
    "dev": "make dev",
    "clean": "make clean",
    "setup": "bash setup.sh",
    "morning": "python scripts/morning_brief.py",
    "evening": "python scripts/evening_review.py",
    "start": "python main.py",
    "cli": "bizy"
  },
  "documentation": [
    "README.md",
    "CONTRIBUTING.md",
    ".clinerules",
    "QUICKSTART.md",
    "GETTING_STARTED.md"
  ],
  "rules": [
    "Always follow TDD: write tests first",
    "Never edit production database directly",
    "Use development environment for feature work",
    "Run 'make test' before committing",
    "All database operations through managers (TaskManager, BusinessPlanner)",
    "Mock AI API calls in tests"
  ]
}
