# Bizy AI Environment Variables Template
# This file uses 1Password CLI secret references
# Usage: op inject -i .env.template -o .env

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET="op://Bizy AI/Production Secrets/JWT_SECRET"

# ============================================
# AI & API Keys
# ============================================
ANTHROPIC_API_KEY="op://Bizy AI/Production Secrets/ANTHROPIC_API_KEY"

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=bizy
POSTGRES_PASSWORD="op://Bizy AI/Production Secrets/POSTGRES_PASSWORD"
POSTGRES_DB=bizy_prod
POSTGRES_HOST="op://Bizy AI/Production Secrets/POSTGRES_HOST"
POSTGRES_PORT=25060

# For docker-compose (alternative format)
DATABASE_URL="postgresql://bizy:op://Bizy AI/Production Secrets/POSTGRES_PASSWORD@op://Bizy AI/Production Secrets/POSTGRES_HOST:25060/bizy_prod?sslmode=require"

# ============================================
# Redis Configuration
# ============================================
REDIS_URL="op://Bizy AI/Production Secrets/REDIS_URL"
REDIS_PORT=25061

# ============================================
# Email Configuration (SendGrid)
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD="op://Bizy AI/Production Secrets/SENDGRID_API_KEY"
FROM_EMAIL=noreply@bizy.ai

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=production
DEBUG=False
RACK_ENV=production

# ============================================
# API Configuration
# ============================================
API_PORT=8000
ALLOWED_ORIGINS=https://bizy.ai,https://app.bizy.ai

# ============================================
# Frontend Configuration
# ============================================
VITE_API_BASE_URL=https://api.bizy.ai
